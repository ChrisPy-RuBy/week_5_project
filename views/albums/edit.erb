<h1>Update Album Details</h1>

<form action='/albums/<%=@albums.id%>' method ='POST'>

<lable for="Edit title field">Edit Title</lable>
<input type="text" id="Edit title field" name="title" type='text' value="<%=@albums.title%>"/>

<label for="update_artist_field">Artist</label>
<select id="update_artist_field" name="artist">
<% @artists.each do |artist| %>
<option value= <%= artist.id%>>
<%=artist.artist_name%></option>
<%end%>
</select>

<label for="update_genre_field">Genre</label>
<select id="update_genre_field" name="genre">
<% @genres.each do |genre| %>
<option value= <%= genre.id%>>
<%=genre.genre_name%></option>
<%end%>
</select>

<lable for="Edit Release year">Edit Release year</lable>
<input type="text" id="Edit Release year" name="release_year" type='text' value="<%=@albums.release_year%>"/>


<lable for="Edit Buy Price">Edit Buy Price</lable>
<input type="text" id="Edit Buy Price" name="buy_price" type='number' value="<%=@albums.buy_price%>"/>

<lable for="Edit Sell Price">Edit Sell price</lable>
<input type="text" id="Edit Sell price" name="sell_price" type='number' value="<%=@albums.sell_price%>"/>

<lable for="Edit number in stock">Edit number in stock</lable>
<input type="text" id="Edit number in stock" name="number_in_stock" type='number' value="<%=@albums.number_in_stock%>"/>

<lable for="Edit number on order">Edit number on order</lable>
<input type="text" id="Edit number on order" name="number_on_order" type='number' value="<%=@albums.number_on_order%>"/>

<lable for="Edit album artwork">Edit album artwork</lable>
<input type="text" id="Edit ablum artwork" name="album_artwork" type='text' value="<%=@albums.album_artwork%>"/>

  <input type="submit" value="Update inventory" class="button">
</form>

